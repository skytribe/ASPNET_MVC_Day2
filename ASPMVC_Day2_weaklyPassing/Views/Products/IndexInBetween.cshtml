@{
    var TotalPrice = 0m; 
}




<h2>Using ViewBag to pass data - In Between Approach</h2>


<table style="width:100%">

    @foreach (var product1 in ViewBag.Products)
    {
        <tr style="background-color: @(product1.OnSale ? "lightgreen":"white") ">


            <td>
                @product1.Name
            </td>
            <td>
                @product1.Price
            </td>
            @*<td>
                    @product1.OnSale
                </td>*@

        </tr>

        TotalPrice = TotalPrice + product1.Price;

    }
</table>
</br></br>
<text>Total Price :</text>@TotalPrice


