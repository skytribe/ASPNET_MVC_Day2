 @{
    var TotalPrice = 0m;

}




<h2>Using ViewData to pass data -  Weakly Bound</h2>


<table style="width:100%">

    @foreach (var product1 in (List<ASPMVC_Day2_PassingData.Models.Product>)ViewData["products"])
    {
        <tr style="background-color: @(product1.OnSale ? "lightgreen":"white") ">

            <td>
                @product1.Name
            </td>
            <td>
                @product1.Price
            </td>
            @*<td>
                    @product1.OnSale
                </td>*@

        </tr>

        TotalPrice = TotalPrice + product1.Price;

    }
</table>
</br></br>
<text>Total Price :</text>@TotalPrice


